{{ 'component-sw-multi-image-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  #MultiImage-{{ section.id }} .grid {
    column-gap: {{ section.settings.desktop_gap }}px;
    row-gap: {{ section.settings.desktop_gap }}px;
  }
{%- endstyle -%}

<div id="MultiImage-{{ section.id }}" class="swmultiimage color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
  <div class="page-width section-{{ section.id }}-padding isolate">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper--self-padded-mobile title-wrapper--no-top-margin {{ section.settings.title_alignment }}">
        <h2 class="title {{ section.settings.title_size }}">
          {{ section.settings.title | escape }}
        </h2>
      </div>
    {%- endunless -%}
    <ul class="grid" role="list">
      {%- liquid
        assign highest_ratio = 0
        for block in section.blocks
          if block.settings.image.aspect_ratio > highest_ratio
            assign highest_ratio = block.settings.image.aspect_ratio
          endif
        endfor
      -%}
      {%- for block in section.blocks -%}
 
        <li class="grid__item swmultiimage-item swmultiimage-item--dprop_{{ block.settings.desktop_proportion }}" {{ block.shopify_attributes }}>
          <div class="swmultiimage-card swmultiimage-card--overlap swmultiimage-card--{{ block.settings.desktop_content_position }}-{{block.settings.desktop_content_alignment}}">
            {%- if block.settings.image != blank -%}
              <div class="swmultiimage-card__image">
                {{ block.settings.image | image_url: width: 1420 | image_tag:
                  loading: 'lazy',
                  sizes: '(min-width: 990px) 550px',
                  widths: '275, 550, 710, 1420',
                  class: 'swmultiimage-card__image--img'
                }}
              </div>
            {%- endif -%}
            <div class="swmultiimage-card__info swmultiimage-card--transparent{{ block.settings.desktop_content_transparency }} swmultiimage-card--height{{ block.settings.desktop_content_height }} swmultiimage-card--width{{ block.settings.desktop_content_width }} color-accent-1">
              {%- unless block.settings.heading == blank -%}
                <h3 class="swmultiimage__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                  {{ block.settings.heading | replace: 'p>', 'span>' }}
                </h3>
              {%- endunless -%}
              {%- unless block.settings.text == blank -%}
                <div class="swmultiimage__text rte subtitle--{{ block.settings.text_size }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
              {%- endunless -%}
              {%- unless block.settings.button_label == blank -%}
                  <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button" {{ block.shopify_attributes }}>
                    {{ block.settings.button_label | escape }}
                  </a>
              {%- endunless -%}
            </div>
          </div>
        </li>
      {%- endfor -%}
    </ul>

  </div>
</div>

